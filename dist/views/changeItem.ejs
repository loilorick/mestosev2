<%- include('particles/header.ejs') %>

  <%- include('particles/navigation.ejs') %>

    <%= console.log(currentId) %>
      <div class="item-rename">
        <form action="/update/<%= currentId %>" method="post" style="display: inline;">
          <div class="card-image3">
            <h2 class="card-heading" style="color: rgb(0, 0, 0); text-align: left; margin-top: 4rem; color: wheat;">
              Привет!
              <br><small style="
    display: block;
    font-size: 20px;
    font-weight: 400;
    margin-top: 5px;">Давайте изменим карточку объекта!</small>
            </h2>
          </div>
          <div class="form-group">
            <label class="form-group__label" for="title">Название</label>
            <input class="form-group__input" name="title" type="text">
          </div>

          <% for (let i=0; i < categories.length; i++) { %>
            <div class="create__radio__items">
              <input type="radio" class="radio" name="check__radio" value="<%= categories[i].id %>">
              <label class="radio__items">
                <%= categories[i].title %>
              </label>
            </div>


            <% } %>

              <div class="form-group">
                <input class="form-group__input" name="image" type="file">
              </div>
              <div class="form-group">
                <label class="form-group__label" for="description">Описание</label>
                <input class="form-group__input" name="description" type="text">
              </div>
              <div class="form-group">
                <label class="form-group__label" for="price">Цена</label>
                <input class="form-group__input" name="price" type="text">
              </div>

              <input class="form-button" type="submit" value="Опубликовать" style="margin-right: 7.5em;">
      </div>
      </form>

      <%- include('particles/footer.ejs') %>