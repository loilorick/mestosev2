<%- include('particles/header.ejs') %>

  <%- include('particles/navigation.ejs') %>

    <%- include('particles/sorting.ejs') %>



      <div class="header-h1 header-h1-dark">
        <h1>ВОТ ЧТО МЫ НАШЛИ</h1>
      </div>
      <div
        style="display: block; margin-left:auto; margin-right:auto; margin-bottom: auto; width: fit-content; height: min-content; background-color: white; border-radius: 10px;">
        <% for (let i=0; i < items.length; i++) { %>
          <a href="/items/<%= items[i].id %>" class="section">
            <div style="position: relative; bottom: -82% ;  ">
              <p class="section__price">Цена: <%= items[i].price %>₽</p>
              <div style="width: auto; padding: 0%; font-size: smaller;">
                <p style="width: fit-content; color: orange; font-weight: bold; display: inline; margin-right: 10px;"
                  href="/users/<%= items[i].author %>">
                  Автор - <%= items[i].author %>
                </p>
                <p style="color: gray; display: block;">
                  Добавлено - <%= items[i].date_creating %>
                </p>
              </div>
            </div>
            <div style="position: relative; bottom: 18%;">
              <h2 class="section__title">
                <%= items[i].title %>
              </h2>
              <img class="section__image" src="/img/<%= items[i].image %>">
            </div>
          </a>
          <% } %>

      </div>





      <%- include('particles/footer.ejs') %>