<%- include('particles/header.ejs') %>

  <%- include('particles/navigation.ejs') %>

    <form class="item-block" action="/add" method="post" style="border: 3px solid rgb(70, 80, 70);">
      <div class="card-image2">
        <h2 class="card-heading" style="color: rgb(0, 0, 0);">
          Привет!
          <br><small style="
display: block;
font-size: 20px;
font-weight: 400;
margin-top: 5px;">Давайте добавим интересное место.</small>
        </h2>
      </div>
      <div class="form-group">
        <label class="form-group__label" name="title" for="title">Название</label>
        <input class="form-group__input" type="text" name="title">
      </div>
      <% for (let i=0; i < categories.length; i++) { %>
        <div class="create__radio__items">
          <input type="radio" class="radio" name="check__radio" value="<%= categories[i].id %>">
          <label class="radio__items">
            <%= categories[i].title %>
          </label>
        </div>


        <% } %>
          <div class="form-group"><label class="form-group__label" for="image"
              style="min-width: 167px; width: auto; padding: 7px; border: 2px solid black;border-radius: 4px; min-height: 10px; background-color: white;">
              <input class="form-group__input" type="file" id="image" name="image"
                accept="image/png, image/jpeg, image/jpg, image/webp" style="display:none; width: auto; height: auto;">
              <p id="imageName" style="margin: 0px; text-align: center; opacity: 0.2;">выберите фото</p>
            </label></div>
          <div class="form-group"><label class="form-group__label" for="description">Описание</label>
            <input class="form-group__input" type="text" name="description">
          </div>
          <div class="form-group"><label class="form-group__label" for="price">Цена</label>
            <input class="form-group__input" type="text" name="price">
          </div>
          <% if(auth){ %>
            <input class="form-button" type="submit" value="Создать">
            <% } %>
    </form>
    <%- include('particles/footer.ejs') %>